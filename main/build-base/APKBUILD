# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=build-base
pkgver=0.5
pkgrel=0
url=http://dev.alpinelinux.org/cgit
pkgdesc="Meta package for build base"
arch="noarch"
license=none
depends="libc-dev fortify-headers make"
if [ "$CHOST" != "$CTARGET" ]; then
	pkgname="$pkgname-$CTARGET_ARCH"
	pkgdesc="$pkgdesc ($CTARGET_ARCH)"
fi

case "$TOOLCHAIN" in
gnu|'')
	depends="binutils gcc g++ $depends"
	if [ "$CHOST" != "$CTARGET" ]; then
		depends="binutils-$CTARGET_ARCH gcc-$CTARGET_ARCH g++-$CTARGET_ARCH $depends"
	fi
	;;
llvm)
	depends="binutils clang compiler-rt libc++-dev $depends"
	if [ "$CHOST" != "$CTARGET" ]; then
		depends="binutils-$CTARGET_ARCH $depends"
	fi
	;;
esac

build() {
	:
}

package() {
	mkdir -p "$pkgdir"
}

